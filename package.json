{
  "name": "ai-playbook",
  "version": "1.0.0",
  "description": "Shared AI playbook for standardizing AI assistant behavior across projects",
  "private": true,
  "scripts": {
    "format": "prettier --write \"**/*.{md,json,yml,yaml}\" \".cursor/**/*.md\" \".cursor/rules/*.mdc\" \"cli/src/**/*.{ts,js}\" \"cli/scripts/**/*.{ts,js}\"",
    "format:check": "prettier --check \"**/*.{md,json,yml,yaml}\" \".cursor/**/*.md\" \".cursor/rules/*.mdc\" \"cli/src/**/*.{ts,js}\" \"cli/scripts/**/*.{ts,js}\"",
    "lint": "npm run lint --prefix cli",
    "lint:fix": "npm run lint:fix --prefix cli",
    "check": "npm run format:check && npm run lint"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "*.{md,json,yml,yaml}": [
      "prettier --write"
    ],
    ".cursor/**/*.{md,mdc}": [
      "prettier --write"
    ],
    "cli/src/**/*.ts": [
      "prettier --write"
    ],
    "cli/scripts/**/*.js": [
      "prettier --write"
    ]
  }
}
