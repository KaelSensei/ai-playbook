{
  "name": "ai-playbook-cli",
  "version": "1.0.0",
  "description": "CLI tool to install AI Playbook in your projects",
  "type": "module",
  "bin": {
    "ai-playbook": "./dist/index.js"
  },
  "scripts": {
    "copy-cursor": "node scripts/copy-cursor.js",
    "build": "npm run copy-cursor && tsc",
    "dev": "tsx src/index.ts",
    "prepublishOnly": "npm run build",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js}\" \"scripts/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\" \"scripts/**/*.{ts,js}\"",
    "check": "npm run lint && npm run format:check"
  },
  "keywords": [
    "cursor",
    "ai",
    "playbook",
    "claude",
    "rules",
    "commands"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/ai-playbook.git",
    "directory": "cli"
  },
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/ai-playbook/issues"
  },
  "homepage": "https://github.com/YOUR_USERNAME/ai-playbook#readme",
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "templates"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}
