#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged to format and check staged files
npx lint-staged || {
  echo "âŒ lint-staged failed. Please fix the errors and try again."
  exit 1
}

# Run CLI linting check on staged TypeScript files
STAGED_TS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep "cli/src/.*\.ts$" || true)
if [ -n "$STAGED_TS_FILES" ]; then
  echo "ğŸ” Running ESLint on staged TypeScript files..."
  cd cli
  npm run lint || {
    echo "âŒ ESLint failed. Please fix the errors and try again."
    exit 1
  }
  cd ..
fi

echo "âœ… Pre-commit checks passed!"
